{
  "app-id": "org.hydrogenmusic.Hydrogen",
  "runtime": "org.kde.Platform",
  "runtime-version": "5.14",
  "sdk": "org.kde.Sdk",
  "command": "hydrogen",
  "finish-args": [
    /* X11 + XShm access */
    "--share=ipc",
    "--socket=x11",
    /* Wayland */
    "--socket=wayland",
    "--env=QT_QPA_PLATFORM=xcb",
    /* Note playback */
    "--socket=pulseaudio",
    /* MIDI */
    "--device=all",
    "--device=shm",
    /* Allow loading, saving files from anywhere (portals donâ€™t work yet) */
    "--filesystem=host",
    /* Allow other instances to see lockfiles */
    "--env=TMPDIR=/var/tmp",
    "--env=LADSPA_PATH=/app/extensions/LadspaPlugins/ladspa:/app/lib/ladspa",
    /* On SuSE it seems to be necessary for sound to work */
    "--env=ALSA_CONFIG_PATH=",
    "--env=QT_AUTO_SCREEN_SCALE_FACTOR=1"
  ],
  "add-extensions": {
    "org.freedesktop.LinuxAudio.LadspaPlugins": {
      "directory": "extensions/LadspaPlugins",
      "version": "19.08",
      "add-ld-path": "lib",
      "merge-dirs": "ladspa",
      "subdirectories": true,
      "no-autodownload": true
    }
  },
  "cleanup": [
    "/include",
    "/man",
    "/share/man",
    "/lib/pkgconfig",
    "*.la"
  ],
  "modules": [
    "shared-modules/linux-audio/lrdf.json",
    "shared-modules/linux-audio/jack2.json",
    "shared-modules/linux-audio/lash.json",
    {
      "name": "portaudio",
      "config-opts": [
        "--disable-static",
        "--without-oss"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://www.portaudio.com/archives/pa_stable_v190600_20161030.tgz",
          "sha256": "f5a21d7dcd6ee84397446fa1fa1a0675bb2e8a4a6dceb4305a8404698d8d1513"
        }
      ]
    },
    {
      "name": "portmidi",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DCMAKE_LIBRARY_OUTPUT_DIRECTORY=/app/lib",
        "-DCMAKE_ARCHIVE_OUTPUT_DIRECTORY=/app/lib",
        "-DCMAKE_RUNTIME_OUTPUT_DIRECTORY=/app/bin"
      ],
      "post-install": [
      /* MuseScore looks for this name for some reason */
        "ln -s libportmidi.so /app/lib/libporttime.so"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://sourceforge.net/projects/portmedia/files/portmidi/217/portmidi-src-217.zip",
          "sha256": "08e9a892bd80bdb1115213fb72dc29a7bf2ff108b378180586aa65f3cfd42e0f"
        },
        {
          "type": "patch",
          "path": "patches/portmidi-no-java.patch"
        }
      ],
      "cleanup": [
        "/bin",
        "/lib/pkgconfig",
        "/include",
        "*.a",
        "*.la"
      ]
    },
    "shared-modules/linux-audio/liblo.json",
    {
      "name": "vamp-plugin-sdk",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/c4dm/vamp-plugin-sdk",
          "tag": "vamp-plugin-sdk-v2.7.1",
          "commit": "10be490c9902d874e9d772d94bf91448303d9b06"
        }
      ],
      "post-install": [
        "install -Dm644 -t /app/share/licenses/vamp-plugin-sdk COPYING"
      ],
      "cleanup": [
        "/bin"
      ]
    },
    {
      "name": "rubberband",
      "build-options": {
        "env": {
          "Vamp_CFLAGS": " ",
          "Vamp_LIBS": " "
        }
      },
      "sources": [
        {
          "type": "archive",
          "url": "https://bitbucket.org/breakfastquay/rubberband/get/v1.8.1.tar.gz",
          "sha256": "9bea85fc2e4d8c3044e3b87c6ecff4282a61a888bafe0ce07cee11fc0ea68f16"
        }
      ],
      "post-install": [
        "install -Dm644 -t /app/share/licenses/rubberband COPYING"
      ],
      "cleanup": [
        "/share/ladspa"
      ]
    },
    {
      "name": "hydrogen",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
        "-DWANT_JACK=0",
        "-DWANT_LASH=1",
        "-DWANT_PORTAUDIO=1",
        "-DWANT_PORTMIDI=1"
      ],
      "build-options": {
        "env": [
          "LADSPA_PATH=/app/extensions/ladspa:/app/lib/ladspa"
        ]
      },
      "post-install": [
        "install -d /app/extensions/LadspaPlugins"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/hydrogen-music/hydrogen/archive/1.0.0-rc1.tar.gz",
          "sha256": "3f3abecf3b8195a16613068c43a08e435abb4052eaa5a5c94eef8121d7d85de8"
        },
        {
          "type": "patch",
          "path": "patches/hydrogen-appdata.patch"
        }
      ]
    }
  ]
}
